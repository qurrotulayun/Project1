<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl6030.project1.MainActivity">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:text="Booking Hotel Indah"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#4fb3a0"
            android:textSize="36dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:src="@drawable/hootel" />

        <EditText
            android:id="@+id/editTextnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari/Malam" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1mlm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="1 Malam" />

            <RadioButton
                android:id="@+id/radioButton2mlm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="2 Malam" />

            <RadioButton
                android:id="@+id/radioButton3mlm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="3 Malam" />
        </RadioGroup>

    <TextView
        android:id="@+id/textViewFasilitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasilitas" />

        <CheckBox
            android:id="@+id/checkBoxSarapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Sarapan" />

        <CheckBox
            android:id="@+id/checkBoxSPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="SPA" />

        <CheckBox
            android:id="@+id/checkBoxAJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Antar Jemput" />

        <CheckBox
            android:id="@+id/checkBoxFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text=" Fitness centre" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kamar" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="New Button" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text" />
    </LinearLayout>
</ScrollView>
